@model BestSite.Sharecertificate

@{
    ViewData["Title"] = "Редактирование сертификата";
}

<h1>Редактировать сертификат</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditSC">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ScId" />
            <div class="form-group">
                <label asp-for="BuySharecount" class="control-label"></label>
                <input asp-for="BuySharecount" class="form-control" />
                <span asp-validation-for="BuySharecount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Priceforone" class="control-label"></label>
                <input asp-for="Priceforone" class="form-control" />
                <span asp-validation-for="Priceforone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Buyinfo" class="control-label"></label>
                <input asp-for="Buyinfo" class="form-control" />
                <span asp-validation-for="Buyinfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shareinfoid" class="control-label"></label>
                <input asp-for="Shareinfoid" class="form-control" />
                <span asp-validation-for="Shareinfoid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Shareholderid" class="control-label"></label>
                <input asp-for="Shareholderid" class="form-control" />
                <span asp-validation-for="Shareinfoid" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-outline-dark" />
                <a asp-action="ShareCertificates" class="btn btn-outline-dark">Назад<i class="glyphicon glyphicon-chevron-right"></i></a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
